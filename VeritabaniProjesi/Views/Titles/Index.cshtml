@model IEnumerable<VeritabaniProjesi.Models.Title>

@{
    ViewData["Title"] = "Basliklar";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container">
    <h1>Basliklar</h1>

    <p>
        <a asp-action="Create">Soru Sor</a>
    </p>
    <div class="list-group">
        @foreach (var item in Model)
        {
            <a class="list-group-item list-group-item-action mb-3" style="padding: 0" 
               asp-controller="Posts" asp-action="Index" asp-route-searchstring="@item.PostTitle">
                <div class="card">    

                    <div class="card-body">
                        <h4 class="card-title">
                            @Html.DisplayFor(modelItem => item.PostTitle)
                        </h4>

                        <p class="card-text">
                            @Html.DisplayFor(modelItem => item.Question.Content)
                        </p>
                    </div>

                    <div class="card-footer text-muted flex-row d-flex justify-content-between">
                        <div>
                            @Html.DisplayFor(modelItem => item.Question.Sender)
                        </div>

                        <div>
                            @Html.DisplayFor(modelItem => item.Date)
                        </div>
                    </div>
                </div>
            </a>
        }
    </div>
</div>
